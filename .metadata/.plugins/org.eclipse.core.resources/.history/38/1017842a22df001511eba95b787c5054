'################################################################################
'   AppManager Application Settings
'################################################################################

Sub SetApplicationTheme()
    app = CreateObject("roAppManager")
    theme = CreateObject("roAssociativeArray")
    
    ' Poster screen
    
    ' Grid screen
    theme.AddReplace("GridScreenBackgroundColor","#000000")
End Sub
