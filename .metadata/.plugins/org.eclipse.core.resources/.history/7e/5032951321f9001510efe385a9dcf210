Function RequestProgramIDs(stationID as String) as Object
    ' Store station id?
    
    ' Make request
    requestID = AsyncPostRequest(SchedulesDirectJSONSchedulesUrl(), headers, body)
    
    ' Store request
    requests = SchedulesDirectRequests()
    
    
End Function
     
Function SchedulesDirectRequest() as Object
    return CreateIfDoesntExistAndReturn(GetSchedulesDirectNetwork(), "requests", "roArray")
End Function
